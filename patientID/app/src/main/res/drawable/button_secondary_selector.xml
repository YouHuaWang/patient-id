<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下狀態 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSecondaryDark" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/colorSecondaryDark" />
        </shape>
    </item>

    <!-- 禁用狀態 -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorGray" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/colorGray" />
        </shape>
    </item>

    <!-- 正常狀態 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSecondary" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/colorSecondary" />
        </shape>
    </item>
</selector>